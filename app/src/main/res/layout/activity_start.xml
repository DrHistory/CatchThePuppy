<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bgstart"
    tools:context=".StartActivity">
<ImageView
    android:id="@+id/iconImage"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:src="@mipmap/puppyicon"></ImageView>

<ImageView
    android:id="@+id/nameImage"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:src="@mipmap/startactivitybanner"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="-80dp"></ImageView>

    <ImageView
        android:id="@+id/easymodeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/easybtn"
        android:onClick="easyClick"
        android:layout_marginTop="-40dp"></ImageView>

    <ImageView
        android:id="@+id/hardmodeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/hardbtn"
        android:onClick="hardClick"></ImageView>

</LinearLayout>