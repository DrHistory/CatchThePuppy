<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070936"
    tools:context=".HardModeActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:background="@mipmap/timeandscorepanel"
            android:layout_height="120dp"
            android:layout_marginLeft="-20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="65dp"
                android:src="@drawable/timeicon"></ImageView>
            <TextView
                android:id="@+id/hardtimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="10dp"
                android:text="Time: 0"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:background="@mipmap/timeandscorepanel"
            android:layout_height="120dp"
            android:layout_marginLeft="-40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="65dp"
                android:src="@drawable/scoreicon"></ImageView>
            <TextView
                android:id="@+id/hardscoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="Score: 0">

            </TextView>

        </LinearLayout>
    </LinearLayout>







